                <div class="carousel-item active">
                    <div class="col-md-3">
                        <%= image_tag 'owl1.png', :class => 'd-block w-100'%>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="col-md-3">
                        <%= image_tag 'owl2.png', :class => 'd-block w-100'%>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="col-md-3">
                        <%= image_tag 'owl3.png', :class => 'd-block w-100'%>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="col-md-3">
                        <%= image_tag 'owl4.png', :class => 'd-block w-100'%>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="col-md-3">
                        <%= image_tag 'owl5.png', :class => 'd-block w-100'%>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="col-md-3">
                        <%= image_tag 'owl6.png', :class => 'd-block w-100'%>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="col-md-3">
                        <%= image_tag 'owl7.png', :class => 'd-block w-100'%>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="col-md-3">
                        <%= image_tag 'owl8.png', :class => 'd-block w-100'%>
                    </div>
                </div>
              </div>
            </div>
        </div>
    </section>



    <!-- Product Section-->
    <section class="bg-light py-5 border-bottom">
        <div class="container my-5">
            <div class="text-center mb-5">
                <h2 class="fw-bolder">TUS PRODUCTOS EN AR</h2>
                <p class="lead mb-0">Escaneamos tus productos para transformarlos en una experiencia interactiva. </p>
            </div>
            <div class="row gx-5 justify-content-center">
                <!-- Producto 1-->
                <div class="col-md-6 col-lg-3">
                    <div class="card mb-5 mb-xl-0">
                        <div class="card-body d-flex flex-column justify-content-between p-3">
                            <div id='ar1'>
                        
                            </div>
                            <!-- Button Ver en tu espacio y modal  -->
                            <button class='cssbutton my-3 mx-auto' style='width:fit-content;' data-bs-toggle="modal" data-bs-target="#exampleModal" data-title="Camara" data-img="<%= @ar1QR %>">Ver en tu espacio
                            </button>
                        </div>
                    </div>
                </div>
                <!-- Producto 2-->
                <div class="col-md-6 col-lg-3">
                    <div class="card mb-5 mb-xl-0">
                        <div class="card-body d-flex flex-column justify-content-between p-3">
                            <div id='ar2'>
                        
                            </div>
                            <!-- Button Ver en tu espacio y modal  -->
