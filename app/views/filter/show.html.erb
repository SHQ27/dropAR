    <script type="module" src="https://unpkg.com/@google/model-viewer/dist/model-viewer.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
  </head>

  <body>
    <% if @filter %>
      <div class='ar-container'>
      <model-viewer id='modelViewer' style='width: 100vh; height: 100vh; margin: auto;' src="<%=@filter.glb_url %>" ios-src='<%= @filter.usdz_url %>' ar ar-modes="webxr scene-viewer" auto-rotate camera-controls></model-viewer>
      </div>
    <% end %>

    <% if @isAR%>
    <script>
      var modelViewer = document.getElementById('modelViewer');
      modelViewer.addEventListener('load', function () { 
        modelViewer.activateAR(); 
      });    
    </script>
    <% end %>
  </body>
